{
  "expo": {
      "name": "TootDesk",
      "slug": "tootdesk",
      "version": "1.0.1",
      "orientation": "default",
      "icon": "./assets/images/icon.png",
      "scheme": "tootdesk",
      "userInterfaceStyle": "automatic",
      "splash": {
          "image": "./assets/images/splash-center.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
      },
      "updates": {
          "fallbackToCacheTimeout": 0
      },
      "assetBundlePatterns": [
          "**/*"
      ],
      "ios": {
          "buildNumber": "2",
          "supportsTablet": true,
          "usesAppleSignIn": true,
          "bundleIdentifier": "top.thedesk.toot",
          "infoPlist": {
              "NSCameraUsageDescription": "画像をアップロードし、トゥートに添付するためにカメラを使用します。",
              "NSPhotoLibraryUsageDescription": "画像をアップロードし、トゥートに添付するためにフォトライブラリを使用します。",
              "CFBundleDevelopmentRegion":"ja_JP"
          }
      }
  }
}